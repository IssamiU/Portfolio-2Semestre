<!-- Projetos Section -->
<section id="projetos" class="py-20">
    <div class="container mx-auto">
        <div class="bg-white rounded-lg shadow-lg p-6">
            <h2 class="text-3xl font-bold text-blue-900 text-center mb-6">PROJETOS</h2>
            
            <% if (projetos && projetos.length > 0) { %>
            <!-- Swiper -->
            <div class="swiper mySwiper relative pt-0 p-20">
                <div class="swiper-wrapper">
                    <% projetos.forEach((projeto, index) => { %>
                    <!-- Slide <%= index + 1 %> -->
                    <div class="swiper-slide">
                        <div class="flex flex-col md:flex-row gap-6 items-center">
                            <% if (projeto.tipo_midia === 'video' && projeto.video_url) { %>
                                <video class="w-1/2 rounded-lg mb-4" controls>
                                    <source src="<%= projeto.video_url %>" type="video/mp4">
                                    Seu navegador não suporta o vídeo.
                                </video>
                            <% } else if (projeto.imagem_url) { %>
                                <img class="w-1/4 rounded-lg mb-4" src="<%= projeto.imagem_url %>" alt="<%= projeto.titulo %>">
                            <% } %>
                            
                            <p class="text-gray-700 text-lg">
                                <% if (projeto.github_url) { %>
                                <a href="<%= projeto.github_url %>" target="_blank" 
                                   class="w-full block bg-blue-100 text-blue-900 text-center font-bold shadow-md border border-black py-2 rounded-3xl hover:bg-blue-200 transition">
                                   <%= projeto.titulo %>
                                </a>
                                <% } else { %>
                                <div class="w-full block bg-blue-100 text-blue-900 text-center font-bold shadow-md border border-black py-2 rounded-3xl">
                                   <%= projeto.titulo %>
                                </div>
                                <% } %>
                                <br>
                                <span class="font-bold">Descrição:</span> <%= projeto.descricao %>
                                <% if (projeto.tecnologias) { %>
                                <br><br>
                                <span class="font-bold">Tecnologias utilizadas:</span> <%= projeto.tecnologias %>
                                <% } %>
                                <% if (projeto.atuacao) { %>
                                <br><br>
                                <span class="font-bold">Atuação:</span> <%= projeto.atuacao %>
                                <% } %>
                            </p>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <!-- Navegação -->
                <div class="swiper-pagination"></div>
                <div class="swiper-button-next !right-5"></div>
                <div class="swiper-button-prev !left-5"></div>
            </div>
            <% } else { %>
            <!-- Fallback caso não tenha projetos -->
            <div class="text-center text-gray-500">
                <p>Nenhum projeto encontrado no momento.</p>
            </div>
            <% } %>
        </div>
    </div>
</section>
